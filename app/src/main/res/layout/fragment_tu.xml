<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentacion.TuFragment"
    >

    <ImageView
        android:id="@+id/imagenUsuario"
        android:layout_width="100dp"
        android:layout_height="100dp"


        android:layout_marginStart="16dp"
        android:layout_marginTop="36dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/perfil128" />

    <TextView
        android:id="@+id/txt_NombrePerfil"
        style="@style/titulos"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="36dp"
        android:text="Nombre del Usuario"
        android:textSize="24dp"
        app:layout_constraintStart_toEndOf="@+id/imagenUsuario"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:background="@color/plomoClaro"
        android:layout_width="409dp"
        android:layout_height="605dp"
        android:layout_marginTop="15dp"
        android:paddingTop="30dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imagenUsuario">
        <TextView
            android:id="@+id/textView12"
            style="@style/subtitulos"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="TRANSACCIONES" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white">

            <Button
                android:id="@+id/botonVerMisProductos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/flechita"
                android:textColor="@color/negroOscuro"
                android:drawableLeft="@drawable/productito"
                android:textAlignment="textStart"
                android:backgroundTint="@color/white"
                android:text="Mis productos" />

            <Button
                android:id="@+id/botonSubirProducto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/flechita"
                android:textColor="@color/negroOscuro"
                android:drawableLeft="@drawable/subirsito"
                android:textAlignment="textStart"
                android:backgroundTint="@color/white"
                android:text="Subir un Producto" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView13"
            style="@style/subtitulos"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CUENTA" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            >

            <Button
                android:id="@+id/botonEditarPerfil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Editar Perfil"
                android:drawableRight="@drawable/flechita"
                android:textColor="@color/negroOscuro"
                android:drawableLeft="@drawable/usuarito"
                android:textAlignment="textStart"
                android:backgroundTint="@color/white"/>

            <Button
                android:id="@+id/botonCambiarPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cambiar contraseña"
                android:drawableRight="@drawable/flechita"
                android:textColor="@color/negroOscuro"
                android:drawableLeft="@drawable/candadito"
                android:textAlignment="textStart"
                android:backgroundTint="@color/white"/>

            <Button
                android:id="@+id/botonCerrarSesion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cerrar sesión"
                android:backgroundTint="@color/rojizo"/>

        </LinearLayout>

    </LinearLayout>

    <ImageButton
        android:id="@+id/botonIrALogin"
        android:layout_width="40dp"
        android:layout_height="42dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@color/white"
        android:src="@drawable/registrar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>