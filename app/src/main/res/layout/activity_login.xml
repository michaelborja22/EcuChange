<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/loginPrincipal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".presentacion.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="33dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="176dp"
            android:layout_height="90dp"
            android:layout_gravity="center_horizontal"
            app:srcCompat="@drawable/ecuchange" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="106dp"
            android:gravity="center_vertical"
            android:text="!Te damos la bienvenida!"
            android:textColor="@color/black"
            android:textSize="36sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView"
            style="@style/etiquetas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="E-mail" />


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layoutEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:endIconMode="clear_text"
            app:errorEnabled="true"
            app:startIconDrawable="@drawable/email_24"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">



            <EditText
                android:id="@+id/txtEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:ems="10"
                android:inputType="textEmailAddress"
                android:textSize="16sp"
                tools:ignore="TouchTargetSizeCheck" />

        </com.google.android.material.textfield.TextInputLayout>


        <TextView
            android:id="@+id/textView3"
            style="@style/etiquetas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5sp"
            android:text="Contraseña" />


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layoutPassword"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:endIconMode="password_toggle"
            app:startIconDrawable="@drawable/candado24">

            <EditText
                android:id="@+id/txtPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:ems="10"
                android:inputType="textPassword"
                android:shadowColor="#000000"
                android:textColor="#000000"
                android:textColorHighlight="#000000"
                android:textColorHint="#000000"
                android:textColorLink="#000000"
                tools:ignore="TouchTargetSizeCheck" />

        </com.google.android.material.textfield.TextInputLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/texto_sec1"
                style="@style/comunicados"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¿Alguna duda? Consulta las "
                android:textSize="14sp" />


            <Button
                android:id="@+id/botonCondicionesUso"
                style="@style/botonesComunicados"
                android:layout_width="191dp"
                android:layout_height="29dp"
                android:layout_margin="0dp"
                android:text="Condiciones de uso" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView6"
                style="@style/comunicados"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" y la" />


            <Button
                android:id="@+id/botonPoliticaPrivacidad"
                style="@style/botonesComunicados"
                android:layout_width="wrap_content"
                android:layout_height="33dp"
                android:text=" Política de Privacidad " />

            <TextView
                android:id="@+id/textView8"
                style="@style/comunicados"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="de EcuChange" />

        </LinearLayout>

        <Button
            android:id="@+id/botonLogin"

            style="@style/Widget.Material3.Button.TonalButton.Icon"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/celeste"
            android:text="Iniciar Sesión"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/botonRegistro"

            style="@style/Widget.Material3.Button.TonalButton.Icon"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:backgroundTint="@color/rojizo"
            android:text="Registrate"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:textStyle="bold" />

0
        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="#C6C2C2"
            android:text="¿Has olvidado tu contraseña?"
            android:textSize="12sp"

            />



    </LinearLayout>

</LinearLayout>