<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/registerPrincipal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".presentacion.RegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="33dp">

        <TextView
            android:id="@+id/textRegistro"
            style="@style/titulos"
            android:layout_width="161dp"
            android:layout_height="91dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="5sp"
            android:text="!Únete a EcuChange!"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/textNombre"
            style="@style/etiquetasNegras"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:text="Nombres" />


        <EditText
            android:id="@+id/txtNombre"
            style="@style/txtsRegister"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/bordes_register"
            android:ems="10"
            android:inputType="text"

            android:text="Nombre"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textApellido"
            style="@style/etiquetasNegras"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Apellido" />

        <EditText
            android:id="@+id/txtApellido"
            style="@style/txtsRegister"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/bordes_register"
            android:inputType="text"
            android:text="Apellido"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/textCorreo"
            style="@style/etiquetasNegras"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="E-mail" />


        <EditText
            android:id="@+id/txtEmail"
            style="@style/txtsRegister"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/bordes_register"
            android:inputType="textEmailAddress"
            android:text="Correo Electrónico" />


        <TextView
            android:id="@+id/textDireccion"
            style="@style/etiquetasNegras"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dirección" />


        <EditText
            android:id="@+id/txtDireccion"
            style="@style/txtsRegister"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/bordes_register"
            android:ems="10"
            android:text="Dirección"
            tools:ignore="TouchTargetSizeCheck" />


        <TextView
            android:id="@+id/textUsuario"
            style="@style/etiquetasNegras"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Usuario" />


        <EditText
            android:id="@+id/txtUsuario"
            style="@style/txtsRegister"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/bordes_register"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:text="Usuario"
            android:textSize="16sp"
            tools:ignore="TouchTargetSizeCheck" />

        <TextView
            android:id="@+id/textPasswordR"
            style="@style/etiquetasNegras"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contraseña" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layoutPassword"
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bordes_register"
            app:endIconMode="password_toggle">

            <EditText
                android:id="@+id/txtPasswordR"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/plomoClaro"

                android:ems="10"
                android:gravity="bottom"
                android:inputType="textPassword"
                android:shadowColor="#000000"
                android:textColor="#000000"
                android:textColorHighlight="#000000"
                android:textColorHint="#000000"
                android:textColorLink="#000000"
                tools:ignore="TouchTargetSizeCheck" />
        </com.google.android.material.textfield.TextInputLayout>


        <Button
            android:id="@+id/botonRegistrar"

            style="@style/Widget.Material3.Button.TonalButton.Icon"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="left"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/rojizo"
            android:gravity="bottom|center_horizontal"
            android:text="Registrarme"
            android:textColor="#FFFFFF"
            android:textSize="25sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/botonRegresar"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:background="@color/white"

            android:scaleX="1.2"
            android:scaleY="1.2"
            app:srcCompat="@drawable/back_arrow_icon_134660" />


    </LinearLayout>

</LinearLayout>
