<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/registerPrincipal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".presentacion.RegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="33dp">

        <TextView
            android:id="@+id/textRegistro"
            style="@style/titulos"
            android:layout_width="161dp"
            android:layout_height="91dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="5sp"
            android:text="!Únete a EcuChange!"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/textNombre"
            style="@style/etiquetasNegras"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:text="Nombres" />


        <EditText
            android:id="@+id/txtNombre"
            style="@style/txtsRegister"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/bordes_register"
            android:ems="10"

            android:inputType="text"
            android:hint="Nombre"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textApellido"
            style="@style/etiquetasNegras"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Apellido" />

        <EditText
            android:id="@+id/txtApellido"
            style="@style/txtsRegister"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/bordes_register"
            android:inputType="text"
            android:hint="Apellido"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/textCorreo"
            style="@style/etiquetasNegras"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="E-mail" />


        <EditText
            android:id="@+id/txtEmail"
            style="@style/txtsRegister"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/bordes_register"
            android:ems="10"
            android:editable="false"
            android:inputType="textEmailAddress"
            android:hint="Correo Electrónico" />


        <TextView
            android:id="@+id/textDireccion"
            style="@style/etiquetasNegras"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dirección" />


        <EditText
            android:id="@+id/txtDireccion"
            style="@style/txtsRegister"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/bordes_register"
            android:hint="Dirección"
            android:ems="10"
            android:inputType="text"
            tools:ignore="TouchTargetSizeCheck" />


        <TextView
            android:id="@+id/textUsuario"
            style="@style/etiquetasNegras"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Usuario" />


        <EditText
            android:id="@+id/txtUsuario"
            style="@style/txtsRegister"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/bordes_register"
            android:ems="10"
            android:inputType="text"
            android:hint="Usuario"
            android:textSize="16sp"
            tools:ignore="TouchTargetSizeCheck" />

        <TextView
            android:id="@+id/textPasswordR"
            style="@style/etiquetasNegras"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contraseña" />

            <EditText
                android:id="@+id/txtPasswordR"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/bordes_register"
                android:drawableRight="@drawable/candado24"
                android:ems="10"
                android:inputType="textPassword"
                tools:ignore="TouchTargetSizeCheck" />


        <Button
            android:id="@+id/botonRegistrar"

            style="@style/Widget.Material3.Button.TonalButton.Icon"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="left"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/rojizo"
            android:gravity="bottom|center_horizontal"
            android:text="Registrarme"
            android:textColor="#FFFFFF"
            android:textSize="25sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/botonRegresar"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:background="@color/white"

            android:scaleX="1.2"
            android:scaleY="1.2"
            app:srcCompat="@drawable/back_arrow_icon_134660" />


    </LinearLayout>

</LinearLayout>
